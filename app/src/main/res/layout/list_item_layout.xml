<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewFir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/lift_on_touch"
        android:background="@drawable/shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/FirNumberList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:elegantTextHeight="true"
                android:lines="2"
                android:paddingVertical="5dp"
                android:singleLine="true"
                android:text="Fir Number:- "
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/icon7" />
            <TextView
                android:id="@+id/AdharFirList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:elegantTextHeight="true"
                android:lines="2"
                android:paddingVertical="2dp"
                android:singleLine="true"
                android:text="Adhar Number:- "
                android:layout_below="@+id/FirNumberList"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/icon7" />
            <TextView
                android:id="@+id/ContactFirList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:elegantTextHeight="true"
                android:lines="2"
                android:paddingVertical="5dp"
                android:singleLine="true"
                android:text="Phone Number:- "
                android:layout_below="@+id/AdharFirList"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/icon7" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>