<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadow">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/select_image" />

    <EditText
        android:id="@+id/Name_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shadow"
        android:maxLines="1"
        android:maxLength="25"
        android:inputType="text"
        android:layout_marginHorizontal="25dp"
        android:layout_toLeftOf="@id/imageView"
        android:layout_marginTop="35dp"
        android:paddingLeft="15dp"
        android:textSize="13dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/Age_textView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@id/Name_textView"
        android:background="@drawable/shadow"
        android:maxLines="1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:maxLength="2"
        android:paddingLeft="15dp"
        android:textSize="13dp"
        android:hint="Age" />

    <TextView
        android:id="@+id/Crime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/Age_textView"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="Background" />

    <CheckBox
        android:id="@+id/criminal_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criminal"
        android:checked="true"
        android:layout_below="@id/Crime"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp" />

    <CheckBox
        android:id="@+id/public_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victim"
        android:layout_below="@id/Crime"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/criminal_checkbox"/>

    <EditText
        android:id="@+id/Crime_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/criminal_checkbox"
        android:enabled="true"
        android:background="@drawable/shadow"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="text"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:textSize="13dp"
        android:hint="Crime" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/Crime_textView"
        android:text="Share to"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National"
        android:layout_below="@id/share_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>

    <CheckBox
        android:id="@+id/state_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:checked="true"
        android:layout_below="@id/share_text"
        android:layout_toRightOf="@id/checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>

    <CheckBox
        android:id="@+id/city_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:layout_below="@id/share_text"
        android:layout_toRightOf="@id/state_checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/Region_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/checkbox"
        android:background="@drawable/shadow"
        android:maxLines="1"
        android:maxLength="40"
        android:inputType="text"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="13dp"
        android:hint="State" />

    <EditText
        android:id="@+id/Fir_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/Region_textView"
        android:background="@drawable/shadow"
        android:maxLines="1"
        android:maxLength="40"
        android:inputType="text"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="13dp"
        android:hint="Fir no." />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:text="Send" />

</RelativeLayout>